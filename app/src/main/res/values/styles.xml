<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- General layout parameters -->
    <style name="Layout" />

    <style name="Layout.Frame">
        <item name="android:background">@drawable/bg_frame</item>
        <item name="android:layout_margin">@dimen/size_x_small</item>
        <item name="android:padding">@dimen/size_x_small</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>

    <style name="TextView.Medium.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="TextView.Huge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <!-- Image -->
    <style name="ImageView">
        <item name="android:layout_margin">@dimen/size_x_small</item>
    </style>

    <style name="ImageView.Thumbnail">
        <item name="android:minWidth">@dimen/image_thumbnail_min_width</item>
        <item name="android:minHeight">@dimen/image_thumbnail_min_height</item>
        <item name="android:contentDescription">@string/content_desc_thumbnail</item>
    </style>

    <style name="ImageView.Poster">
        <item name="android:minWidth">@dimen/image_poster_min_width</item>
        <item name="android:minHeight">@dimen/image_poster_min_height</item>
        <item name="android:contentDescription">@string/content_desc_poster</item>
    </style>

    <!-- Other elements -->
    <style name="Underline">
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">@dimen/size_x_small</item>
    </style>

</resources>
