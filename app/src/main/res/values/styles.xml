<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView"/>
    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>
    <style name="TextView.Medium.Italic">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="TextView.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>
    <style name="TextView.Huge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

</resources>
